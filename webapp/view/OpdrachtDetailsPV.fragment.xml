			<Toolbar>
				<content>
					<Title text="PV" level="H2"/>
					<ToolbarSpacer/>
				</content>
			</Toolbar>
		</headerToolbar>
		<StandardListItem title="{DocTitel}" description="{DocID}" icon="{ProductPicUrl}" iconDensityAware="false" iconInset="false" press="handlePress" detailPress="handleDetailPress" type="DetailAndActive"/>
	<infoToolbar>
	    <Toolbar width="100%" id="__xxlwwbar2">
	        <content>
	            <ToggleButton id="__xxwwx" icon="sap-icon://multi-select"/>
